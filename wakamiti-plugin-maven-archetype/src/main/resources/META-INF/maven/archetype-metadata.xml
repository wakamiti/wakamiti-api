<archetype-descriptor name="quickstart">

    <requiredProperties>
        <requiredProperty key="pluginName" />
        <requiredProperty key="pluginId">
            <defaultValue>${pluginName.toLowerCase()}</defaultValue>
        </requiredProperty>
        <requiredProperty key="PluginId">
            <defaultValue>${pluginId.toLowerCase().substring(0,1).toUpperCase()}${pluginId.toLowerCase().substring(1)}</defaultValue>
        </requiredProperty>
        <requiredProperty key="groupId">
            <defaultValue>es.wakamiti</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>${pluginId}-wakamiti-plugin</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}.${pluginId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="package2">
            <defaultValue>${package.replace(".","_")}</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginDescription">
            <defaultValue>${pluginName} steps for Wakamiti</defaultValue>
        </requiredProperty>
        <requiredProperty key="currentYear">
            <defaultValue>${package.getClass().forName("java.time.LocalDate").getMethod("now").invoke(null).getYear()}</defaultValue>
        </requiredProperty>
    </requiredProperties>


    <fileSets>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>.</directory>
            <includes>
                <include>CHANGELOG.md</include>
                <include>LICENSE.md</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>



</archetype-descriptor>